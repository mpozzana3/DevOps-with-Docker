Dockerfile backend
# Start with a base image
FROM golang:1.16

# Set the working directory inside the container
WORKDIR /app

# Copy go mod and sum files
COPY go.mod go.sum ./

# Download all dependencies.
RUN go mod download

# Copy the entire source code from the current directory to the Working directory in the container
COPY . .

# Build the Go app
RUN go build -o server

# Run tests
RUN go test ./...

# Expose port 8080                     
EXPOSE 8080

# Declare environment variables
ENV PORT=8080
ENV REQUEST_ORIGIN=http://localhost:5001

# Command to run the executable
CMD ["./server"]

Dockerfile frontend
# Start with a base image containing Node.js version 16
FROM node:16

# Set the working directory in the container
WORKDIR /app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the local code to the container's work directory
COPY . .

# Build the static files
RUN npm run build

# Install `serve` to serve the static files
RUN npm install -g serve

# Expose the port
EXPOSE 5001

# Set environment variable for the backend URL
ENV REACT_APP_BACKEND_URL=http://localhost:8080

# Command to serve
CMD ["serve", "-s", "-l", "5001", "build"]
